<?xml version="1.0" encoding="utf-8" ?>
<?xalm-comp compile="true"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <Style TargetType="ContentPage" x:Key="contentPage">
        <Setter Property="BackgroundColor" Value="WhiteSmoke" />
        <Setter Property="Padding" Value="20" />
    </Style>

    <Style Class="Title" TargetType="Label">
        <Setter Property="FontSize" Value="Title"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <Style Class="LightBlue" TargetType="Label">
        <Setter Property="TextColor" Value="LightBlue" />
    </Style>

    <Style Class="SubHeader" TargetType="Label">
        <Setter Property="FontSize" Value="Subtitle" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
    
    <EllipseGeometry 
        x:Key="circle"
        Center="50, 50"
        RadiusX="30"
        RadiusY="30"/>
    <Style x:Key="CircularButton" TargetType="Button">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="Large"/>
        <Setter Property="HeightRequest" Value="100"/>
        <Setter Property="WidthRequest" Value="100"/>
        <Setter Property="VerticalOptions" Value="End"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="Clip" Value="{StaticResource circle}"/>
    </Style>

</ResourceDictionary>